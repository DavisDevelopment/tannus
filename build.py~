#!/usr/bin/python3

#- easily query the dimensions of [this] Terminal window


#- prints potentially useful information to the developer in
#- an easy-to-read form
def announce(message):
    (width, height) = console.getTerminalSize()
    
    coln = ((width - len(str(message))) / 2)
    padding = ("=" * coln)
    main_line = (padding + str(message) + padding)
    line = ("=" * width)

    print(line)
    print(main_line)
    print(line)




#- main entry-point to the program
def main():
    announce( "Leah\'s Cheeks Are Puffy" )

if __name__ == '__main__':
    main()
